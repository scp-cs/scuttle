{% extends "base.j2" %}

{% block content %}
<div class="flex flex-col items-center justify-center h-full p-10">

<h1 class="pb-6 text-3xl font-semibold">Změňte si heslo</h1>

<form method="post" class="flex flex-col items-center text-lg">
    {{ form.hidden_tag() }}
    {{form.pw.label(class='self-start font-thin opacity-90 text-sm')}}
    {{form.pw(class='mb-4 input-field', id='input-title')}}
    {{form.pw_confirm.label(class='self-start font-thin opacity-90 text-sm')}}
    {{form.pw_confirm(class='mb-4 input-field', id='input-link')}}
    {{form.submit(class='bg-green-600 w-36 btn-rounded hover:bg-green-500')}}
</form>

</div>

{% endblock content %}