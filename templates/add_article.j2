{% extends "base.j2" %}

{% block content %}
<div class="flex flex-col p-10">
<h1 class="text-4xl font-bold">Přidat článek</h1>
<hr class="my-4 border-white">
<form action="{{url_for('add_article', uid=user.uid)}}" method="post" class="flex flex-col w-1/2 text-lg">
    {{form.title.label(class='font-bold')}}
    {{form.title(class='mb-4 input-field')}}
    {{form.link.label(class='font-bold')}}
    {{form.link(class='mb-4 input-field')}}
    {{form.translator.label(class='font-bold')}}
    {{form.translator(class='mb-4 select-none opacity-60 input-field', disabled='', value=user.nickname)}}
    {{form.words.label(class='font-bold')}}
    {{form.words(class='mb-4 input-field')}}
    {{form.bonus.label(class='font-bold')}}
    {{form.bonus(class='mb-4 input-field')}}
</form>
</div>
{% endblock content %}