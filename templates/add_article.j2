{% extends "base.j2" %}

{% block content %}
<div class="flex flex-col p-10">
<h1 class="text-4xl font-bold">Přidat článek</h1>
<hr class="my-4 border-white">
<form method="post" class="flex flex-col w-1/2 text-lg">
    {{ form.hidden_tag() }}
    {{form.title.label(class='font-bold')}}
    {{form.title(class='input-field mb-4', id='input-title')}}
    {{form.link.label(class='font-bold')}}
    {{form.link(class='input-field mb-4', id='input-link', value='https://scp-cs.wikidot.com/')}}
    {{form.translator.label(class='font-bold')}}
    {{form.translator(class='opacity-60 input-field mb-4 select-none', disabled='', value=user.nickname)}}
    {{form.words.label(class='font-bold')}}
    {{form.words(class='input-field mb-4')}}
    {{form.bonus.label(class='font-bold')}}
    {{form.bonus(class='input-field mb-4')}}
    {{form.submit(class='w-36 btn-rounded hover:bg-green-500 self-start bg-green-600')}}
</form>
</div>

<script src="{{url_for('static', filename='js/newarticle.js')}}"></script>
{% endblock content %}