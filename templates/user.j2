{% extends "base.j2" %}

{% block head %}
<script src="https://cdn.jsdelivr.net/npm/clipboard@2.0.11/dist/clipboard.min.js"></script>
{% endblock head %}

{% block content %}

<div class="flex flex-col p-10">
<h1 class="mb-2 text-4xl font-bold">{{user.nickname}}</h1>
<hr class="mb-4 border-white">
<p class="my-1 text-xl"><b>ID:</b> {{user.uid}}</p>
<p class="my-1 text-xl"><b>Wikidot ID:</b> {{user.wikidot}}</p>
<p class="my-1 text-xl"><b>Discord ID:</b> {{user.discord}}</p>
<p class="my-1 text-xl"><b>Počet bodů:</b> {{stats.points}}</p>
<p class="my-1 text-xl"><b>Celkem překladů:</b> {{stats.count}}</p>
</div>

<script>
new ClipboardJS('.clip');
</script>

{% endblock content %}